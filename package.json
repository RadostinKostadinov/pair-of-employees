  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.54.1",
